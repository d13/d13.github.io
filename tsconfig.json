{
  "compileOnSave": true,
  "compilerOptions": {
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "lib": [
      "es2017",
      "dom"
    ],
    "module": "es2015",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": false,
    "noUnusedLocals": true,
    "outDir": "./dist/",
    "pretty": false,
    "removeComments": true,
    "rootDirs": [
      "src/ts/"
    ],
    "sourceMap": true,
    "strictNullChecks": false,
    "target": "es5"
  }
}